{
    "builders": [
      {
        "type": "hyperv-iso",
        "iso_url": "{{user `iso_url`}}",
        "iso_checksum_type": "{{user `iso_checksum_type`}}",
        "iso_checksum": "{{user `iso_checksum`}}",
        "boot_wait": "2m",
        "ssh_username": "packer",
        "ssh_password": "packer",
        "ssh_timeout": "2h",
        "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
        "shutdown_timeout": "15m",
        "disk_size": "{{user `disk_size`}}",
        "ram_size": "{{user `memory_size`}}",
        "cpu": "{{user `cpus`}}",
        "switch_name": "{{user `switch_name`}}",
        "temp_path": "{{user `temp_path`}}",
        "floppy_files": [
          "{{user `autounattend`}}",
          "./scripts/fixnetwork.ps1",
          "./scripts/microsoft-updates.bat",
          "./scripts/win-updates.ps1",
          "./scripts/openssh.ps1",
          "./scripts/chocolatey.ps1"
        ]
      }
    ],
    "provisioners": [
      {
        "type": "shell",
        "remote_path": "C:/Windows/Temp/script.bat",
        "execute_command": "{{.Vars}} cmd /c {{.Path}}",
        "scripts": [    
          "./scripts/disable-auto-logon.bat",
          "./scripts/enable-rdp.bat",
          "./scripts/compile-dotnet-assemblies.bat",
          "./scripts/compact.bat",
          "./scripts/installers.bat"
          ]
      },
      {
        "type": "shell",
        "remote_path": "C:/Windows/Temp/script.sh",
        "execute_command": "{{.Vars}} cmd /c {{.Path}} %V8VERSION% ones/%V8VERSION%",
        "environment_vars": [
          "V8VERSION={{user `V8VERSION`}}",
          "V8USER={{user `V8USER`}}",
          "V8PASSW={{user `V8PASSW`}}"
        ],
        "scripts": [    
          "./scripts/onesdownloader.sh"
        ]
      }
    ],
